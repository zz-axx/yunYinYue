/*独立分包的使用的全局样式 */
@import "/static/iconfont/iconfont.wxss";
page {
  height: 100%;
}

.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}


.header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.header .date .day {
  font-size: 38rpx;
}


/* 列表区域 */
.recommendList {
  position: relative;
  top: -20rpx;
  padding: 20rpx;
  border-radius: 30rpx;
  background: #fff;
}

.listHeader {
  height: 50rpx;
  line-height: 50rpx;
}
.listHeader .changeMore {
  float: right;
}


.scrollList {
  height: calc(100vh - 395rpx)
}
.scrollItem {
  position: relative;
  display: flex;
  margin-top: 20rpx;
}

.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.scrollItem .musicContent {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.scrollItem .musicContent text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

.scrollItem .iconfont {
  position: absolute;
  right: 0;
  height: 80rpx;
  width: 80rpx;
  text-align: right;
  line-height: 80rpx;
}
